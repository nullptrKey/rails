
<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-striped">
  <thead >
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>     
        <td><img src="<%= product.image_url %>" ></td>
        <td><%= product.price %></td>
       <td>
          <%= link_to edit_product_path(product), class: 'btn btn-primary ' do %>
            <span class="test">Edit</span>
          <% end %>
       </td>
        <td>
          <%= link_to product, class: 'btn btn-primary link-dark' do %>
          <span class="test">Show</span>
          <% end %>
        </td>
        <td>
          <%= link_to product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary link-dark' do %>
          <span class="test">Destroy</span>
          <% end %>
        </td>         
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
